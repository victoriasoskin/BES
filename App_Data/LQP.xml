    <Group stype="Question" txt="קידום / שליטה" gid="5">
        <txt>קידום / שליטה</txt>
        <val></val>
        <Question id="31">
            <txt>מי מחליט כיצד אתה מוציא את כספך?</txt>
            <val></val>
            <Answer>
                <txt>אני מחליט</txt>
                <val>3</val>
